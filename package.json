{
  "name": "@spaship/spaship",
  "description": "Monorepo for the SPAship project.",
  "private": true,
  "devDependencies": {
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.4.0",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.0.9",
    "lerna": "3.18.1",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1"
  },
  "scripts": {
    "start": "npm run lerna run start",
    "bootstrap": "npm run lerna bootstrap --hoist",
    "postinstall": "npm run bootstrap",
    "test": "bash scripts/test.sh",
    "dev": "bash scripts/dev.sh",
    "lerna": "./node_modules/.bin/lerna",
    "bump-version": "npm run lerna -- version --include-merged-tags --conventional-commits --create-release=github"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}

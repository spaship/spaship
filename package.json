{
  "name": "@spaship/spaship",
  "description": "Monorepo for the SPAship project.",
  "version": "0.3.3",
  "private": true,
  "devDependencies": {
    "codecov": "^3.6.5",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "jest": "24.9.0",
    "lerna": "3.20.2",
    "mock-fs": "4.11.0",
    "pino-pretty": "4.0.0",
    "prettier": "2.0.3",
    "pretty-quick": "2.0.1",
    "cypress-file-upload": "^4.0.4",
    "cypress-xpath": "^1.4.0",
    "mocha": "^7.1.1",
    "mochawesome": "^5.0.0",
    "mochawesome-merge": "^4.0.3",
    "mochawesome-report-generator": "4.1.0",
    "cypress": "^4.2.0",
    "yargs": "^15.3.1"
  },
  "scripts": {
    "start": "npm run lerna run start",
    "bootstrap": "npm run lerna bootstrap --hoist",
    "postinstall": "npm run bootstrap",
    "test": "CI=true npm run lerna run test",
    "dev": "bash scripts/dev.sh",
    "lerna": "./node_modules/.bin/lerna",
    "autorelease": "npm run lerna -- version --include-merged-tags --conventional-commits --create-release=github",
    "autopublish": "npm run lerna publish from-git",
    "e2e": "node ./e2etest/manager/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
